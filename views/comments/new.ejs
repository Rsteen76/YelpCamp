<% include ../partials/header %>
<div class="container">
    <h1 class="h1 text-center">Add New Comment to
        <%= campground.name %>
    </h1>
    <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-8">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <form class="w-100 card-body p-0" action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group">
                            <textarea class="form-control" type="text" name="comment[text]" placeholder="text"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary">Submit!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<a href="/campgrounds">Back</a>
<% include ../partials/footer %>