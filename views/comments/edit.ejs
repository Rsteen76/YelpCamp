<% include ../partials/header %>
<div class="container mx-auto">
    <h1 style="text-align: center">Edit Comment</h1>
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <form style="width: 30%;" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" type="text" name="comment[text]" value="<%= comment.text %>"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Submit!</button>
                </div>
            </form>
        </div>
</div>

<a href="/campgrounds">Back</a>
