<% include ../partials/header %>
<div class="container">
    <h1 class="h1 text-center">Edit
        <%= campground.name %>
    </h1>
    <div class="row justify-content-center">
        <div class="col-sm-12 col-lg-8">
            <div class="card text-center bg-light">
                <div class="card-body">
                    <form class="w-100" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="campground[name]" value=<%=campground.name %>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="number" name="campground[price]" value="<%= campground.price %>"
                                min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <input class="form-control input-md" type="text" name="campground[image]" value="<%= campground.image %>">
                        </div>
                        <div class="form-group">
                            <textarea class="form-control input-md" type="text" name="campground[description]" value="<%= campground.description %>"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary">Update!</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<a href="/campgrounds">Back</a>
<% include ../partials/footer %>